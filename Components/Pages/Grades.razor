@page "/teacher-grade/{SubmissionId:int}"
@rendermode InteractiveServer

<h3>Выставить оценку для задания: @SubmissionId</h3>

@if (isLoading)
{
    <div class="spinner-border" role="status">
        <span class="sr-only">Загрузка...</span>
    </div>
}
else
{
    <div class="form-group">
        <label for="gradeValue">Оценка (от 0 до 10)</label>
        <InputNumber id="gradeValue" class="form-control" @bind-Value="newGrade.GradeValue" />
    </div>

    <div class="form-group">
        <label for="comments">Комментарии</label>
        <InputTextArea id="comments" class="form-control" @bind-Value="newGrade.Comments" />
    </div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-success" @onclick="SaveGrade">
            <i class="fas fa-check-circle"></i> Сохранить оценку
        </button>

    </div>
}